{% extends 'MGDAdminBundle::layout_admin.html.twig' %}

{% block title %}
{{ parent() }} - CuponDescuento {{ 'views.show.show'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>CuponDescuento</h1>

<form class="form-horizontal">
    <fieldset>        <div class="control-group">
            <label class="control-label">Id</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.id }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Valor</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.valor }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Porcentaje</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{% if entity.porcentajeBoo %}SÃ­{% else %}No{% endif %}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Nusos</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.nUsos }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Nusados</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.nUsados }}</span>            </div>
        </div>        <div class="control-group">
            <label class="control-label">Expiraciondate</label>
            <div class="controls">                <span class="input-xlarge uneditable-input">{{ entity.expiracionDate|date('Y-m-d H:i:s') }}</span>            </div>
        </div>    </fieldset>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('cupondescuento') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <a class="btn btn-primary" href="{{ path('cupondescuento_edit', { 'id': entity.id }) }}">
            {{ 'views.recordactions.edit'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
    <div class="float-left">
        <form action="{{ path('cupondescuento_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger" type="submit" onclick="return confirm('{{ 'views.recordactions.confirm'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}');">{{ 'views.recordactions.delete'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
        </form>
    </div>
</div>
{% endblock %}