{% extends 'MGDAdminBundle::layout_admin.html.twig' %}

{% block title %}
{{ parent() }} - Cuenta {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
{% endblock %}

{% block page %}

<h1>Cuenta {{ 'views.new.creation'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</h1>

<form class="well" action="{{ path('cuenta_create') }}" method="post" {{ form_enctype(form) }}>

    {{ form_widget(form) }}
    {% include '@MGDAdmin/Cuenta/add_cuenta_usuario.html.twig' with {'form': form} %}
    <p>
        <button type="submit" class="btn btn-success">{{ 'views.new.create'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}</button>
    </p>
</form>

<div>
    <div class="float-left">
        <a class="btn" href="{{ path('cuenta') }}">
            {{ 'views.recordactions.backtothelist'|trans({}, 'JordiLlonchCrudGeneratorBundle') }}
        </a>
    </div>
</div>
{% endblock %}